<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/city"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_city"
        android:layout_centerHorizontal="true"
        android:text="@string/weather"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_weather"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/temperature"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/img_divider_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temperature"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/title_section2"
        android:src="@drawable/divider" />

    <com.usi.comm.common.view.HorizontialListView
        android:id="@+id/hlv_12h"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/img_divider_t"
        android:background="#f00" />

    <ImageView
        android:id="@+id/img_divider_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hlv_12h"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/title_section2"
        android:src="@drawable/divider" />

    <ListView 
        android:id="@+id/weather_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/img_divider_b"/>

</RelativeLayout>